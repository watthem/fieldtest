{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^build"],
			"persistent": true
		},
		"lint": {},
		"test": {
			"dependsOn": ["build"]
		},
		"clean": {
			"cache": false
		}
	}
}
