{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["vitest/globals", "node"]
	},
	"include": ["src/**/*", "index.ts", "vitest.ts", "executable.ts", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
