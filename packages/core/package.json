{
	"name": "@fieldtest/core",
	"version": "0.1.0",
	"description": "Core validation utilities for the FieldTest toolkit - markdown processing with standardized schema validation",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"sideEffects": false,
	"files": ["dist/**", "README.md", "CHANGELOG.md"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"lint": "eslint src --ext .ts",
		"test": "vitest run"
	},
	"keywords": [
		"fieldtest",
		"validation",
		"markdown",
		"schema",
		"standard-schema",
		"frontmatter",
		"content-processing"
	],
	"homepage": "https://github.com/watthem/fieldtest",
	"repository": {
		"type": "git",
		"url": "https://github.com/watthem/fieldtest.git"
	},
	"bugs": {
		"url": "https://github.com/watthem/fieldtest/issues"
	},
	"author": "Matthew Hendricks <hello@matthewhendricks.net>",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@types/node": "^18.17.15",
		"eslint": "^8.49.0",
		"rimraf": "^5.0.0",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.4"
	},
	"dependencies": {
		"gray-matter": "^4.0.3"
	}
}
