{
	"name": "@fieldtest/validation-lib",
	"version": "0.1.0",
	"description": "Reusable TypeScript validation library using Zod schemas",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		},
		"./cli": {
			"require": "./dist/cli.js",
			"import": "./dist/cli.mjs",
			"types": "./dist/cli.d.ts"
		}
	},
	"bin": {
		"validate": "./dist/cli.js"
	},
	"files": ["dist/**"],
	"author": "Matthew Hendricks <hello@matthewhendricks.net>",
	"license": "MIT",
	"homepage": "https://github.com/watthem/fieldtest",
	"repository": {
		"type": "git",
		"url": "https://github.com/watthem/fieldtest.git",
		"directory": "packages/validation-lib"
	},
	"bugs": {
		"url": "https://github.com/watthem/fieldtest/issues"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "eslint src/**/*.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@fieldtest/shared": "workspace:*",
		"zod": "^3.22.4",
		"commander": "^12.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"eslint": "^8.56.0",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.0",
		"typescript": "^5.3.0",
		"vitest": "^1.0.0"
	}
}
