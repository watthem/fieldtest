{
	"name": "Fieldtest MCP Server",
	"version": "0.1.0",
	"description": "The Fieldtest MCP server to let anyone validate and organize their docs using flat-file indices and standard schema.",
	"private": true,
	"type": "module",
	"bin": {
		"Fieldtest MCP Server": "./build/index.js"
	},
	"files": ["build"],
	"scripts": {
		"build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
		"prepare": "npm run build",
		"watch": "tsc --watch",
		"inspector": "npx @modelcontextprotocol/inspector build/index.js"
	},
        "dependencies": {
                "@modelcontextprotocol/sdk": "1.11.4",
                "@fieldtest/shared": "file:../../../shared"
        },
	"devDependencies": {
		"@types/node": "^20.11.24",
		"typescript": "^5.3.3"
	}
}
